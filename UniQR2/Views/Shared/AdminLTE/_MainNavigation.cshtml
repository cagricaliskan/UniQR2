@{
    string userRole = User.Claims.Where(n => n.Type == System.Security.Claims.ClaimTypes.Role).FirstOrDefault().Value;
}


<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="~/" class="brand-link">
        <img src="~/img/aybu.png" alt="AdminLTE Logo" class="brand-image">
        <span class="brand-text font-weight-light">Uni<b>QR</b></span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/avatar2.png" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@User.Claims.Where(n => n.Type == System.Security.Claims.ClaimTypes.Name).FirstOrDefault().Value</a>
                <a href="#" class="d-block" style="font-size: smaller;color: #838f9b">@User.Claims.Where(n => n.Type == System.Security.Claims.ClaimTypes.Role).FirstOrDefault().Value</a>
            </div>
        </div>

        <!-- Sidebar Menu -->

        <ul class="nav  nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

            <li class="nav-item">
                <a href="~/home/index" class="nav-link @Html.ActiveClass("Home", "Index")">
                    <i class="far fa-circle nav-icon"></i>
                    <p>Home</p>
                </a>
            </li>


                    @if (userRole == "Administrator")
                    {
                        <li class="nav-item col-md-12 @Html.ActiveClass("Index", "InstructorManagement")">
                            <a href="~/InstructorManagement/Index" class="nav-link">
                                <i class="far fa-circle nav-icon"> </i>
                                <p>Instructors</p>
                            </a>
                        </li>

                <li class="nav-item">
                    <a href="~/Course/Index" class="nav-link @Html.ActiveClass("Course", "Index")">
                        <i class="far fa-circle nav-icon"> </i>
                        <p>Courses</p>
                    </a>
                </li>


                <li class="nav-item">
                    <a href="~/Classroom/Index" class="nav-link @Html.ActiveClass("Classroom", "Index")">
                        <i class="far fa-circle nav-icon"> </i>
                        <p>Classrooms</p>
                    </a>
                </li>


                <li class="nav-item">
                    <a href="~/Class/Index" class="nav-link @Html.ActiveClass("Class", "Index")">
                        <i class="far fa-circle nav-icon"> </i>
                        <p>Classes</p>
                    </a>
                </li>
            }

            <li class="nav-item">
                <a href="~/account/logout" class="nav-link">
                    <i class="far fa-circle nav-icon"></i>
                    <p>Logout</p>
                </a>
            </li>


        </ul>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
