@model UniQR2.Models.User
@{
    ViewData["Title"] = "Test";
    Layout = null;
}
<head>
    <partial name="AdminLTE/_LoginSignup" />
</head>
<div class="row login-page">
    <div class="col-md-3 form">
        <form method="post" class="login-form" asp-action="Test">
            @Html.AntiForgeryToken()
            <h1>TestMail</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success" style="color: white;">
                Send e-mail
            </button>
            <br />
            <br />
            @Html.ActionLink("Back to main page", "index", "home")
        </form>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger" role="alert">@ViewBag.Message</div>
        }
    </div>
</div>
