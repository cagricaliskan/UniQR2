@model UniQR2.ViewModels.UserRegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
    <partial name="AdminLTE/_LoginSignup" />
</head>

<div class="row login-page">
    <div class="col-md-3 form">
        <form method="post" class="login-form" asp-action="Register">
            @Html.AntiForgeryToken()
            <h1>Register</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <input asp-for="FullName" class="form-control" placeholder="Name" />
                <span asp-validation-for="FullName" class="text-danger"> </span>
            </div>


            <div class="form-group">
                <input asp-for="Email" class="form-control disabled" placeholder="Email"/>
                <span asp-validation-for="Email" class="form-control"></span>
            </div>
            

            
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="form-control"></span>
            </div>
            
            
            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="form-control"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save User Details" class="btn btn-primary" />
            </div>
            @Html.ActionLink("Back to main page", "index", "home")
            <b>@ViewBag.message</b>
        </form>

    </div>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
